# Quality control using FASTQC
rule fastqc:
    input:
        join(config["fastqdir"], "{run}/{sample}/{file}.fastq.gz")
    output:
        join(config["fastqcdir"], "{run}/{sample}/{file}_fastqc.zip")
    threads: 1
    params:
        cmd = config["fastqc"]["cmd"],
        out = join(config["fastqcdir"], "{run}/{sample}")
    version: "1.0"
    shell:
        """
            {params.cmd} \
            -f fastq \
            -o {params.out} \
            {input}
        """

